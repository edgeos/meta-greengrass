[Unit]
Description=greengrass tmp directory bind mount
Requires=mnt-data.mount edgeos-data-mnt-init.service edgeos-conf-reset.service
After=mnt-data.mount edgeos-data-mnt-init.service edgeos-conf-reset.service

[Mount]
What=/mnt/data/root-overlay/greengrass/ggc/packages
Where=/greengrass/ggc/packages
Type=none
Options=bind

[Install]
WantedBy=edgeos-bind.target